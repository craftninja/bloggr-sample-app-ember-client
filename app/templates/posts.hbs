<div class="row">
  <div class="col-md-3">
    <table class=table>
      <thead>
        <tr><th>Recent posts</th></tr>
      </thead>
      <tbody>
        {{#each}}
          <tr>
            <td>
            {{#link-to 'post' this}}
              {{title}} <small class="muted">by {{author}}</small>
            {{/link-to}}
          </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  <div class="col-md-9">
    {{outlet}}
  </div>
</div>
